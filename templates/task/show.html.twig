{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ task.nom }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ task.categorie }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ task.statut }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ task.dateDebut ? task.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ task.deadline ? task.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbrPersonne</th>
                <td>{{ task.nbrPersonne }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">back to list</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
