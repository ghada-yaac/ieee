{% extends 'base.html.twig' %}

{% block title %}Gestion des Tâches - IEEE HUB{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table-responsive {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .table th {
            background-color: #0056b3;
            color: white;
        }
        .badge-todo {
            background-color: #6c757d;
        }
        .badge-in_progress {
            background-color: #ffc107;
        }
        .badge-completed {
            background-color: #28a745;
        }
        .btn-action {
            margin-right: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'partials/admin_header.html.twig' %}

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gestion des Tâches</h1>
            <a href="{{ path('task_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouvelle Tâche
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Catégorie</th>
                    <th>Statut</th>
                    <th>Date de début</th>
                    <th>Deadline</th>
                    <th>Points</th>
                    <th>Membre responsable</th>
                    <th>Événement</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.nom }}</td>
                        <td>{{ task.categorie|capitalize }}</td>
                        <td>
                                <span class="badge badge-{{ task.statut }}">
                                    {{ task.statut == 'todo' ? 'À faire' : (task.statut == 'in_progress' ? 'En cours' : 'Terminée') }}
                                </span>
                        </td>
                        <td>{{ task.dateDebut|date('d/m/Y') }}</td>
                        <td>{{ task.deadline|date('d/m/Y') }}</td>
                        <td>{{ task.point }}</td>
                        <td>
                            {% if task.relation %}
                                {{ task.relation.nom }} {{ task.relation.prenom }}
                            {% else %}
                                <span class="text-muted">Non assigné</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('event_show', {'id': task.event.id}) }}">
                                {{ task.event.nom }}
                            </a>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-sm btn-warning btn-action">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger btn-action" data-bs-toggle="modal" data-bs-target="#deleteModal{{ task.id }}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>

                            <!-- Modal de confirmation de suppression -->
                            <div class="modal fade" id="deleteModal{{ task.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ task.id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel{{ task.id }}">Confirmer la suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir supprimer la tâche "{{ task.nom }}" ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <form method="post" action="{{ path('task_delete', {'id': task.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center">Aucune tâche trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}