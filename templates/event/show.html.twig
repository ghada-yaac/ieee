{% extends 'base.html.twig' %}

{% block title %}Détails de l'Événement - IEEE HUB{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .event-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 20px;
        }
        .event-header {
            background-color: #0056b3;
            color: white;
            padding: 20px;
            position: relative;
        }
        .event-body {
            padding: 20px;
        }
        .event-category {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }
        .event-info {
            margin-bottom: 15px;
        }
        .event-label {
            font-weight: bold;
            color: #0056b3;
        }
        .participants-card, .tasks-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 20px;
        }
        .card-header {
            background-color: #0056b3;
            color: white;
            padding: 15px;
        }
        .table-responsive {
            border-radius: 0 0 10px 10px;
            overflow: hidden;
        }
        .table th {
            background-color: #f8f9fa;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'partials/admin_header.html.twig' %}

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Détails de l'Événement</h1>
            <div>
                <a href="{{ path('event_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash"></i> Supprimer
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="event-card">
                    <div class="event-header">
                        <h2>{{ event.nom }}</h2>
                        <span class="event-category">{{ event.categorie|capitalize }}</span>
                    </div>
                    <div class="event-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="event-info">
                                    <div class="event-label">Date</div>
                                    <div>{{ event.date|date('d/m/Y') }}</div>
                                </div>
                                <div class="event-info">
                                    <div class="event-label">Lieu</div>
                                    <div>{{ event.location }}</div>
                                </div>
                                <div class="event-info">
                                    <div class="event-label">Prix</div>
                                    <div>{{ event.prix }} TND</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="event-info">
                                    <div class="event-label">Nombre de personnes maximum</div>
                                    <div>{{ event.nbrPersonne }}</div>
                                </div>
                                <div class="event-info">
                                    <div class="event-label">Accès</div>
                                    <div>
                                        {% if event.accesNonMembre %}
                                            <span class="badge bg-success">Accessible aux non-membres</span>
                                        {% else %}
                                            <span class="badge bg-warning">Réservé aux membres</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="participants-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Participants ({{ participants|length }})</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Membre</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for participant in participants %}
                                <tr>
                                    <td>{{ participant.nom }}</td>
                                    <td>{{ participant.email }}</td>
                                    <td>
                                        {% if participant.memberId %}
                                            <span class="badge bg-success">Oui</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Non</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">Aucun participant inscrit</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="tasks-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Tâches ({{ tasks|length }})</h3>
                        <a href="{{ path('task_new_for_event', {'id': event.id}) }}" class="btn btn-sm btn-light">
                            <i class="fas fa-plus"></i> Ajouter une tâche
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Statut</th>
                                <th>Deadline</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for task in tasks %}
                                <tr>
                                    <td>{{ task.nom }}</td>
                                    <td>
                                        {% if task.statut == 'todo' %}
                                            <span class="badge bg-secondary">À faire</span>
                                        {% elseif task.statut == 'in_progress' %}
                                            <span class="badge bg-warning">En cours</span>
                                        {% else %}
                                            <span class="badge bg-success">Terminée</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ task.deadline|date('d/m/Y') }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteTaskModal{{ task.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Modal de confirmation de suppression de tâche -->
                                        <div class="modal fade" id="deleteTaskModal{{ task.id }}" tabindex="-1" aria-labelledby="deleteTaskModalLabel{{ task.id }}" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteTaskModalLabel{{ task.id }}">Confirmer la suppression</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Êtes-vous sûr de vouloir supprimer la tâche "{{ task.nom }}" ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <form method="post" action="{{ path('task_delete', {'id': task.id}) }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                                            <button type="submit" class="btn btn-danger">Supprimer</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Aucune tâche associée</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de confirmation de suppression d'événement -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer l'événement "{{ event.nom }}" ?
                    <br><br>
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> Attention : Cette action supprimera également toutes les tâches et participations associées à cet événement.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('event_delete', {'id': event.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}