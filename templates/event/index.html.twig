{% extends 'base.html.twig' %}

{% block title %}Gestion des Événements - IEEE HUB{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .filter-section {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .event-card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            height: 100%;
        }
        .event-card:hover {
            transform: translateY(-5px);
        }
        .event-header {
            background-color: #0056b3;
            color: white;
            padding: 15px;
        }
        .event-body {
            padding: 15px;
        }
        .event-footer {
            background-color: #f8f9fa;
            padding: 15px;
            border-top: 1px solid #dee2e6;
        }
        .event-category {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            background-color: rgba(0, 86, 179, 0.8);
            color: white;
        }
        .event-price {
            font-weight: bold;
            color: #0056b3;
        }
        .event-date {
            color: #6c757d;
        }
        .event-location {
            margin-top: 10px;
        }
        .event-access {
            margin-top: 10px;
            font-style: italic;
            color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'partials/admin_header.html.twig' %}

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gestion des Événements</h1>
            <a href="{{ path('event_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouvel Événement
            </a>
        </div>

        <div class="filter-section">
            <form method="get" action="{{ path('event_index') }}" class="row g-3">
                <div class="col-md-4">
                    <label for="category" class="form-label">Catégorie</label>
                    <select name="category" id="category" class="form-select">
                        <option value="">Toutes les catégories</option>
                        {% for category in categories %}
                            <option value="{{ category }}" {% if app.request.query.get('category') == category %}selected{% endif %}>
                                {{ category|capitalize }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Date de début</label>
                    <input type="date" name="startDate" id="startDate" class="form-control" value="{{ app.request.query.get('startDate') }}">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">Date de fin</label>
                    <input type="date" name="endDate" id="endDate" class="form-control" value="{{ app.request.query.get('endDate') }}">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Filtrer</button>
                    <a href="{{ path('event_index') }}" class="btn btn-secondary">Réinitialiser</a>
                </div>
            </form>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for event in events %}
                <div class="col">
                    <div class="event-card">
                        <div class="event-header position-relative">
                            <h5 class="card-title">{{ event.nom }}</h5>
                            <span class="event-category">{{ event.categorie|capitalize }}</span>
                        </div>
                        <div class="event-body">
                            <p class="event-price">Prix: {{ event.prix }} TND</p>
                            <p class="event-date">
                                <i class="fas fa-calendar-alt"></i> {{ event.date|date('d/m/Y') }}
                            </p>
                            <p class="event-location">
                                <i class="fas fa-map-marker-alt"></i> {{ event.location }}
                            </p>
                            <p>
                                <i class="fas fa-users"></i> {{ event.nbrPersonne }} personnes max.
                            </p>
                            <p class="event-access">
                                {% if event.accesNonMembre %}
                                    <i class="fas fa-unlock"></i> Accessible aux non-membres
                                {% else %}
                                    <i class="fas fa-lock"></i> Réservé aux membres
                                {% endif %}
                            </p>
                        </div>
                        <div class="event-footer">
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Détails
                                </a>
                                <div>
                                    <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ event.id }}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal de confirmation de suppression -->
                    <div class="modal fade" id="deleteModal{{ event.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ event.id }}" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel{{ event.id }}">Confirmer la suppression</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous sûr de vouloir supprimer l'événement "{{ event.nom }}" ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <form method="post" action="{{ path('event_delete', {'id': event.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        Aucun événement trouvé.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}