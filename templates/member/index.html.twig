{% extends 'base.html.twig' %}

{% block title %}Gestion des Membres - IEEE HUB{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .filter-section {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .table-responsive {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .table th {
            background-color: #0056b3;
            color: white;
        }
        .badge-active {
            background-color: #28a745;
        }
        .badge-pending {
            background-color: #ffc107;
        }
        .badge-inactive {
            background-color: #dc3545;
        }
        .btn-action {
            margin-right: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'partials/admin_header.html.twig' %}

    <div class="container mt-4">
        <h1 class="mb-4">Gestion des Membres</h1>

        <div class="filter-section">
            <form method="get" action="{{ path('member_index') }}" class="row g-3">
                <div class="col-md-3">
                    <label for="role" class="form-label">Rôle</label>
                    <select name="role" id="role" class="form-select">
                        <option value="">Tous les rôles</option>
                        {% for role in roles %}
                            <option value="{{ role }}" {% if app.request.query.get('role') == role %}selected{% endif %}>
                                {{ role|replace({'ROLE_': ''}) }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="startDate" class="form-label">Date de début</label>
                    <input type="date" name="startDate" id="startDate" class="form-control" value="{{ app.request.query.get('startDate') }}">
                </div>
                <div class="col-md-3">
                    <label for="endDate" class="form-label">Date de fin</label>
                    <input type="date" name="endDate" id="endDate" class="form-control" value="{{ app.request.query.get('endDate') }}">
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Statut</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="active" {% if app.request.query.get('status') == 'active' %}selected{% endif %}>Actif</option>
                        <option value="pending" {% if app.request.query.get('status') == 'pending' %}selected{% endif %}>En attente</option>
                        <option value="inactive" {% if app.request.query.get('status') == 'inactive' %}selected{% endif %}>Inactif</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Filtrer</button>
                    <a href="{{ path('member_index') }}" class="btn btn-secondary">Réinitialiser</a>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Rôle</th>
                    <th>Statut</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    <th>Points</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for member in members %}
                    <tr>
                        <td>{{ member.memberID }}</td>
                        <td>{{ member.nom }}</td>
                        <td>{{ member.prenom }}</td>
                        <td>{{ member.email }}</td>
                        <td>{{ member.numTel }}</td>
                        <td>
                            {% for role in member.roles %}
                                {% if role != 'ROLE_USER' %}
                                    <span class="badge bg-secondary">{{ role|replace({'ROLE_': ''}) }}</span>
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                                <span class="badge badge-{{ member.membershipStatus }}">
                                    {{ member.membershipStatus == 'active' ? 'Actif' : (member.membershipStatus == 'pending' ? 'En attente' : 'Inactif') }}
                                </span>
                        </td>
                        <td>{{ member.membershipStartDate|date('d/m/Y') }}</td>
                        <td>{{ member.membershipEndDate|date('d/m/Y') }}</td>
                        <td>{{ member.points }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('member_show', {'id': member.id}) }}" class="btn btn-sm btn-info btn-action">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-sm btn-warning btn-action">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger btn-action" data-bs-toggle="modal" data-bs-target="#deleteModal{{ member.id }}">
                                    <i class="fas fa-trash"></i>
                                </button>

                                {% if member.membershipStatus == 'pending' %}
                                    <form method="post" action="{{ path('member_change_status', {'id': member.id}) }}" style="display: inline;">
                                        <input type="hidden" name="status" value="active">
                                        <button type="submit" class="btn btn-sm btn-success btn-action">
                                            <i class="fas fa-check"></i> Activer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>

                            <!-- Modal de confirmation de suppression -->
                            <div class="modal fade" id="deleteModal{{ member.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ member.id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel{{ member.id }}">Confirmer la suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir supprimer le membre {{ member.nom }} {{ member.prenom }} ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <form method="post" action="{{ path('member_delete', {'id': member.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11" class="text-center">Aucun membre trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}