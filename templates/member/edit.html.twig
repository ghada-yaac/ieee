{% extends 'base.html.twig' %}

{% block title %}Modifier un Membre - IEEE HUB{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            background-color: #fff;
        }
        .form-header {
            background-color: #0056b3;
            color: white;
            padding: 15px;
            border-radius: 10px 10px 0 0;
            margin: -20px -20px 20px -20px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'partials/admin_header.html.twig' %}

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Modifier un Membre</h1>
            <a href="{{ path('member_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour Ã  la liste
            </a>
        </div>

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="form-card">
                    <div class="form-header">
                        <h2 class="mb-0">{{ member.nom }} {{ member.prenom }}</h2>
                    </div>

                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.nom) }}
                            {{ form_row(form.prenom) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.numTel) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.roles) }}
                            {{ form_row(form.membershipStatus) }}
                            {{ form_row(form.membershipStartDate) }}
                            {{ form_row(form.membershipEndDate) }}
                            {{ form_row(form.points) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}