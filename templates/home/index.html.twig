{% block title %}<title>Default Title</title>{% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/acceuil.css') }}">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    {% endblock %}
{% include 'header.html.twig' %}
{% block body %}
    <section class="hero">
        <div class="container">
            <h1>Welcome to IEEE ISET-RADES SB</h1>
            <p>Advancing Technology for Humanity</p>
        </div>
    </section>

    <div class="breadcrumb">
        <div class="container">
            <a href="#">Home</a> > Welcome to IEEE
        </div>
    </div>

    <main>
        <div class="container">
            <section class="main-content">
                <h2>Where Innovation Meets Excellence in Engineering</h2>
                <p>Are you ready to be at the forefront of technological innovation, standing at the intersection of engineering, computing, and technology? Joining IEEE is not just a membership; it's an invitation to be part of a global community that drives innovation and reshapes the landscape of technology.</p>

                <div class="cta-buttons">
                    <a href="{{ path('app_register') }}" class="cta-button">Join IEEE Today</a>
                    <a href="#" class="cta-button secondary">Learn More</a>
                </div>
            </section>

            <section class="featured-events">
                <h2>Upcoming Events</h2>
                <div class="events-grid">
                    <div class="event-card">
                        <div class="event-date">
                            <span class="day">15</span>
                            <span class="month">MAR</span>
                        </div>
                        <div class="event-details">
                            <h3>Technical Workshop</h3>
                            <p>Introduction to Machine Learning with Python</p>
                            <p class="event-location"><i class="fas fa-map-marker-alt"></i> Engineering Building, Room 305</p>
                            <a href="#" class="event-link">Learn More</a>
                        </div>
                    </div>
                    <div class="event-card">
                        <div class="event-date">
                            <span class="day">22</span>
                            <span class="month">MAR</span>
                        </div>
                        <div class="event-details">
                            <h3>Guest Lecture</h3>
                            <p>Future of Renewable Energy Technologies</p>
                            <p class="event-location"><i class="fas fa-map-marker-alt"></i> Science Center Auditorium</p>
                            <a href="#" class="event-link">Learn More</a>
                        </div>
                    </div>
                    <div class="event-card">
                        <div class="event-date">
                            <span class="day">05</span>
                            <span class="month">APR</span>
                        </div>
                        <div class="event-details">
                            <h3>Networking Event</h3>
                            <p>Connect with Industry Professionals</p>
                            <p class="event-location"><i class="fas fa-map-marker-alt"></i> Student Union, Grand Hall</p>
                            <a href="#" class="event-link">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="view-all">
                    <a href="event.html">View All Events <i class="fas fa-arrow-right"></i></a>
                </div>
            </section>

            <section class="benefits">
                <h2>Why Join IEEE?</h2>
                <div class="benefits-grid">
                    <div class="benefit-card">
                        <i class="fas fa-users"></i>
                        <h3>Networking</h3>
                        <p>Connect with professionals, academics, and students in your field</p>
                    </div>
                    <div class="benefit-card">
                        <i class="fas fa-lightbulb"></i>
                        <h3>Innovation</h3>
                        <p>Stay at the cutting edge of technological advancements</p>
                    </div>
                    <div class="benefit-card">
                        <i class="fas fa-book"></i>
                        <h3>Resources</h3>
                        <p>Access to journals, publications, and educational materials</p>
                    </div>
                    <div class="benefit-card">
                        <i class="fas fa-certificate"></i>
                        <h3>Recognition</h3>
                        <p>Opportunities for awards and professional recognition</p>
                    </div>
                </div>
            </section>
        </div>
    </main>

{% endblock %}
{% include 'footer.html.twig' %}