{% extends 'base.html.twig' %}

{% block title %}Membre index{% endblock %}

{% block body %}
    <h1>Membre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MemberID</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>NumTel</th>
                <th>MembershipStatus</th>
                <th>MembershipStartDate</th>
                <th>MembershipEndDate</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td>{{ membre.id }}</td>
                <td>{{ membre.memberID }}</td>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.prenom }}</td>
                <td>{{ membre.email }}</td>
                <td>{{ membre.mdp }}</td>
                <td>{{ membre.numTel }}</td>
                <td>{{ membre.membershipStatus }}</td>
                <td>{{ membre.membershipStartDate ? membre.membershipStartDate|date('Y-m-d') : '' }}</td>
                <td>{{ membre.membershipEndDate ? membre.membershipEndDate|date('Y-m-d') : '' }}</td>
                <td>{{ membre.role }}</td>
                <td>
                    <a href="{{ path('app_membre_show', {'id': membre.id}) }}">show</a>
                    <a href="{{ path('app_membre_edit', {'id': membre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_membre_new') }}">Create new</a>
{% endblock %}
