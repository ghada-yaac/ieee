{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
{% endblock %}
{% include 'header.html.twig' %}
{% block body %}
    <section class="auth-section">
        <div class="container">
            <div class="auth-container">
                <div class="auth-content">
                    <div class="auth-header">
                        <h2>Login to Your IEEE Account</h2>
                        <p>Access exclusive resources, events, and networking opportunities</p>
                    </div>

                    <form method="post" class="auth-form">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}



                        <div class="form-group">
                            <label for="inputMemberID">Member ID</label>
                            <div class="input-with-icon">
                                <i class="fas fa-user"></i>
                                <input type="text" id="inputMemberID" name="memberID" placeholder="Enter your member ID" value="{{ last_username }}" required autocomplete="username">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword">Password</label>
                            <div class="input-with-icon">
                                <i class="fas fa-lock"></i>
                                <input type="password" id="inputPassword" name="password" placeholder="Enter your password" required autocomplete="current-password">
                                <button type="button" class="toggle-password">

                                </button>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-options">
                            <div class="remember-me">
                                <input type="checkbox" id="remember" name="_remember_me">
                                <label for="remember">Remember me</label>
                            </div>

                        </div>

                        <button type="submit" class="auth-button">Login</button>

                        <div class="auth-footer">
                            <p>Don't have an account? <a href="{{ path('app_register') }}">Sign up</a></p>
                        </div>
                    </form>
                </div>

                <div class="auth-image">
                    <img src="https://via.placeholder.com/600x800?text=IEEE+Login" alt="IEEE Login">
                    <div class="auth-image-overlay">
                        <h3>Welcome Back!</h3>
                        <p>Log in to access your IEEE membership benefits and stay connected with the global engineering community.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% include 'footer.html.twig' %}